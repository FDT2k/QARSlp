#!/usr/bin/env bash
# _______  _______  ______  _______  __        
#|       ||   _   ||   __ \|     __||  |.-----.
#|   -  _||       ||      <|__     ||  ||  _  |
#|_______||___|___||___|__||_______||__||   __|
#                                       |__|   
# QARSlp Qtile + Arch Ricing Script
# by: gibranlp <thisdoesnotwork@gibranlp.dev>
# MIT licence 
# 
rofi_command="rofi -theme ~/.config/rofi/backend.rasi"

## options
B1="wal"
B2="haishoku"
B3="colorz"
B4="colorthief"
B5="wal light"
B6="waishoku light"
B7="colorz light"
B8="colorthief light"

options="<- Dark ->\n$B1\n$B2\n$B3\n$B4\n<- Ligth ->\n$B5\n$B6\n$B7\n$B8"

## Main
chosen="$(echo -e "$options" | $rofi_command -p "Color Theme" -dmenu -selected-row 1)"
case $chosen in
    $B1)
		  genwal -t $B1 -r
        ;;
    $B2)
		  genwal -t $B2 -r
        ;;
    $B3)
		  genwal -t $B3 -r
        ;;
    $B4)
		  genwal -t $B4 -r
        ;;
    $B5)
		  genwal -t $B1 -r -l
        ;;
    $B6)
		  genwal -t $B2 -r -l
        ;;
    $B7)
		  genwal -t $B3 -r -l
        ;;
    $B8)
		  genwal -t $B4 -r -l
        ;;
esac

