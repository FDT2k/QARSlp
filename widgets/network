#!/usr/bin/env bash
# _______  _______  ______  _______  __        
#|       ||   _   ||   __ \|     __||  |.-----.
#|   -  _||       ||      <|__     ||  ||  _  |
#|_______||___|___||___|__||_______||__||   __|
#                                       |__|   
# QARSlp Qtile + Arch Ricing Script
# by: gibranlp <thisdoesnotwork@gibranlp.dev>
# MIT licence 
#

rofi_command="rofi -theme ~/.config/rofi/right_toolbar.rasi"

## Get working 
IFACE="$(nmcli | grep -i interface | awk '/interface/ {print $2}')"
STATUS="$(nmcli radio wifi)"

active=""
urgent=""

if (ping -c 1 gibranlp.dev) &>/dev/null; then
	if [[ $STATUS == *"enable"* ]]; then
        if [[ $IFACE == e* ]]; then
            connected=" Turn Wifi On"
        else
            connected=" Turn Wifi Off"
        fi
	active="-a 0"
	SSID=" $(iwgetid -r)"
	PIP="$(wget --timeout=3 http://ipinfo.io/ip -qO -)"
	fi
else
    urgent="-u 0"
    SSID="Disconnected"
    PIP="Not Available"
    connected=" Turn Wifi On"
fi

## Icons
bmon=" Bandwith Monitor"
launch_cli=" Network Manager (CLI)"
launch=" Network Manager (GUI)"

options="$connected\n$bmon\n$launch_cli\n$launch"

## Main
chosen="$(echo -e "$options" | $rofi_command -p "$SSID -> IP $PIP" -dmenu $active $urgent -selected-row 2)"
case $chosen in
    $connected)
		if [[ $STATUS == *"enable"* ]]; then
			nmcli radio wifi off
		else
			nmcli radio wifi on
		fi 
        ;;
    $bmon)
        urxvt -e bmon"
        ;;
    $launch_cli)
        urxvt -e  nmtui"
        ;;
    $launch)
        nm-connection-editor
        ;;
esac

