cp -r -v ~/QARSlp/dotfiles/. ~/
cp -r -v ~/QARSlp/dotfiles/shortc.conf ~/
sudo cp -r -v ~/QARSlp/scripts/* /opt/bin
sudo cp -r -v ~/QARSlp/widgets/*  /opt/bin
sudo cp -r -v ~/.cache/wal /root/.cache/
sudo cp -r -v ~/QARSlp/dotfiles/.config/rofi/* /root/.config/rofi/
sudo cp -r -v ~/QARSlp/dotfiles/themes/QARSlp /usr/share/sddm/themes/
sudo cp ~/QARSlp/dotfiles/sddm.conf /etc/sddm.conf
